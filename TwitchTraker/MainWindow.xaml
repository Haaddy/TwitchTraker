<Window x:Class="TwitchTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Twitch Tracker" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F23">
<ScrollViewer>
        <!-- Основная сетка -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Панель поиска -->
            <RowDefinition Height="*"/>      <!-- Статистика -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель (поиск) -->
        <StackPanel x:Name="MainPanel"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    
                    Width="400"
                    Margin="0,100,0,20"> <!-- отступ сверху, чтобы было по центру -->
            
            <TextBlock Text="Twitch Tracker"
                       Foreground="White"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <Border Background="#2A2A2A"
                    CornerRadius="8"
                    Padding="15"
                    BorderBrush="#ffff"
                    BorderThickness="0">
                
                <StackPanel>
                    <TextBlock Text="Введите никнейм:"
                               Foreground="#EFEFF1"
                               FontSize="16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="0"
                                 Background="#1b1b1b"
                                 Foreground="White"
                                 BorderBrush="#444444"
                                 BorderThickness="1"
                                 Padding="10"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>

                        <Button Click="SendBtn_Click"
                                Grid.Column="1"
                                Content="🔍"
                                Background="#6441A5"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,10"
                                Margin="10,0,0,0"
                                FontSize="16"
                                Cursor="Hand"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Нижняя панель (статистика) -->
        <StackPanel x:Name="StatsPanel"
                    Grid.Row="1"
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0">
            <Border x:Name="StatsBorder">
                
            </Border>
            <Image x:Name="ProfileImageUI" Width="128" Height="128" Margin="0,20,0,0"/>
            <TextBlock x:Name="isLiveUI"
                       Text=""
                       Foreground="White"
                       FontSize="20"
                       Margin="0,5,0,0"/>

            <TextBlock x:Name="DislplayNameUI"
                       Text=""
                       Foreground="White"
                       FontSize="20"
                       Margin="0,5,0,0"/>
            
        </StackPanel>
    </Grid>
</ScrollViewer>
    
</Window>
